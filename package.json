{
  "name": "block-chain-evt-scan",
  "version": "1.0.0",
  "description": "A simple app for scraping block chain transaction events based",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/mklemersson/block-chain-event-collector"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start": "npm run start:api & npm run start:worker",
    "start:api": "node run dist/api/main.js",
    "start:worker": "node run dist/worker/main.js",
    "dev": "npm run dev:api & npm run dev:worker | pino-pretty",
    "dev:api": "ts-node src/app/api/main.ts | pino-pretty",
    "dev:worker": "ts-node src/app/worker/main.ts | pino-pretty",
    "lint": "biome lint ./src",
    "lint:fix": "biome check ./src --apply",
    "test": "jest src/",
    "test:integration": "jest tests/integration/"
  },
  "engines": {
    "node": ">= 20"
  },
  "keywords": [],
  "author": "mklemersson",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@ethersproject/abstract-provider": "~5.7.0",
    "@typegoose/typegoose": "~12.2.0",
    "ethers": "~6.11.1",
    "mongoose": "~8.2.0",
    "pino": "~8.19.0",
    "rimraf": "~5.0.5",
    "dotenv": "~16.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "jest": "^29.7.0",
    "nock": "^13.5.3",
    "pino-pretty": "^10.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
